{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <div class="container">
        <h1>Review</h1>

        <a class="btn btn-info" href="{{ path('back_review_index') }}">Back to list</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ review.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ review.title }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ review.content }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ review.status }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ review.updatedAt ? review.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a class="btn btn-success" href="{{ path('back_review_edit', {'id': review.id}) }}">Edit</a>

            {{ include('back_review/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
