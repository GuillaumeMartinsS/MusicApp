{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <div class="container">
        <h1>Playlist</h1>

        <a class="btn btn-info" href="{{ path('back_playlist_index') }}">Back to list</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ playlist.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ playlist.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ playlist.picture }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ playlist.description }}</td>
                </tr>
                <tr>
                    <th>Album</th>
                    <td>{{ playlist.album ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ playlist.status }}</td>
                </tr>
                <tr>
                    <th>NbLike</th>
                    <td>{{ playlist.nbLike }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ playlist.slug }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ playlist.createdAt ? playlist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ playlist.updatedAt ? playlist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a class="btn btn-success" href="{{ path('back_playlist_edit', {'id': playlist.id}) }}">Edit</a>

            {{ include('back_playlist/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

