{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <h1>Playlist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playlist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ playlist.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ playlist.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ playlist.description }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ playlist.album ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ playlist.status }}</td>
            </tr>
            <tr>
                <th>NbLike</th>
                <td>{{ playlist.nbLike }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ playlist.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ playlist.createdAt ? playlist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ playlist.updatedAt ? playlist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_playlist_index') }}">back to list</a>

    <a href="{{ path('app_back_playlist_edit', {'id': playlist.id}) }}">edit</a>

    {{ include('back_playlist/_delete_form.html.twig') }}
{% endblock %}
