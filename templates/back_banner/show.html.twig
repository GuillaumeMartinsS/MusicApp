{% extends 'base.html.twig' %}

{% block title %}Banner{% endblock %}

{% block body %}
    <div class="container">
        <h1>Banner</h1>

        <a class="btn btn-info" href="{{ path('back_banner_index') }}">Back to list</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ banner.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ banner.name }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ banner.status }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ banner.createdAt ? banner.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ banner.updatedAt ? banner.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a class="btn btn-success" href="{{ path('back_banner_edit', {'id': banner.id}) }}">Edit</a>

            {{ include('back_banner/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}