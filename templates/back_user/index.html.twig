{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
        <h1>User index</h1>

        {{ include('back_home/_nav_back.html.twig')}}

        <a class="btn btn-success" href="{{ path('back_user_new') }}">Create new</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    {# <th>Password</th>
                    <th>Picture</th>
                    <th>Description</th> #}
                    <th>Roles</th>
                    <th>Status</th>
                    <th>Certification</th>
                    {# <th>Label</th> #}
                    {# <th>Slug</th> #}
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.password }}</td>
                    <td>{{ user.picture }}</td> #}
                    {# <td>{{ user.description }}</td> #}
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.status }}</td>
                    <td>{{ user.certification ? 'Yes' : 'No' }}</td>
                    <td>{{ user.label }}</td>
                    {# <td>{{ user.slug }}</td> #}
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('back_user_show', {'id': user.id}) }}">Show</a>
                        <a class="btn btn-success" href="{{ path('back_user_edit', {'id': user.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
