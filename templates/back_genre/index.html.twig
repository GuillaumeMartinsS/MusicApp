{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Genre index</h1>

        {{ include('back_home/_nav_back.html.twig')}}

        <a class="btn btn-success" href="{{ path('back_genre_new') }}">Create new</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Picture</th>
                    {# <th>Description</th> #}
                    <th>Status</th>
                    {# <th>Slug</th> #}
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td>{{ genre.id }}</td>
                    <td>{{ genre.name }}</td>
                    <td>{{ genre.picture }}</td>
                    <td>{{ genre.description }}</td>
                    <td>{{ genre.status }}</td>
                    <td>{{ genre.slug }}</td>
                    <td>{{ genre.createdAt ? genre.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ genre.updatedAt ? genre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('back_genre_show', {'id': genre.id}) }}">show</a>
                        <a class="btn btn-success" href="{{ path('back_genre_edit', {'id': genre.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
