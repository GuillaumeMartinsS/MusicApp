{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <div class="container">
        <h1>Genre</h1>

        <a href="{{ path('back_genre_index') }}">Back to list</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ genre.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ genre.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ genre.picture }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ genre.description }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ genre.status }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ genre.slug }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ genre.createdAt ? genre.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ genre.updatedAt ? genre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a class="btn btn-success" href="{{ path('back_genre_edit', {'id': genre.id}) }}">Edit</a>

        {{ include('back_genre/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
